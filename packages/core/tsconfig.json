{
  "extends": "../../../../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "noEmit": false,
    "allowImportingTsExtensions": false,
    "baseUrl": ".",
    "rootDir": "src",
    "paths": {
      "@/*": ["src/*"]
    },
    "declaration": true,
    "declarationMap": true,
    "outDir": "es"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "es", "lib", "dist", "**/*.test.ts", "**/*.spec.ts"]
}
